<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252533"
    android:fillViewport="true"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="32dp">

        <Button
            android:id="@+id/button_dodajkurs_hp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Dodaj kurs"
            android:textSize="27sp"
            android:textStyle="bold"
            app:icon="@drawable/plus_large_svgrepo_com"
            app:iconGravity="start"
            app:iconSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_dolnepartieciala_hp" />

        <Button
            android:id="@+id/button_username"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFFFF"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="nazwauzytkownika"
            android:textSize="25sp"
            android:textStyle="bold"
            app:iconGravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_historia"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Historia"
            android:textSize="26sp"
            android:textStyle="bold"
            app:icon="@drawable/history_256x233"
            app:iconGravity="start"
            app:iconPadding="15dp"
            app:iconSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_username" />

        <Button
            android:id="@+id/button_zdrowykregoslup_hp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/light_green"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Zdrowy kręgosłup"
            android:textSize="26sp"
            android:textStyle="bold"
            app:icon="@drawable/spine_svgrepo_com"
            app:iconGravity="start"
            app:iconSize="45dp"
            app:layout_constraintTop_toBottomOf="@+id/button_historia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/button_relaks_hp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/blue"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Relaks"
            android:textSize="27sp"
            android:textStyle="bold"
            app:icon="@drawable/meditation_round_svgrepo_com"
            app:iconGravity="start"
            app:iconSize="45dp"
            app:layout_constraintTop_toBottomOf="@+id/button_zdrowykregoslup_hp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/button_dolnepartieciala_hp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Dolne partie ciała"
            android:textSize="26sp"
            android:textStyle="bold"
            app:icon="@drawable/foot_side_view_outline_svgrepo_com"
            app:iconGravity="start"
            app:iconSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_relaks_hp" />

        <Button
            android:id="@+id/button_customkurs_hp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:elevation="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="//dozrobienia"
            android:textSize="27sp"
            android:textStyle="bold"
            app:icon="@drawable/pencil_edit_svgrepo_com"
            app:iconGravity="start"
            app:iconSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_dodajkurs_hp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
